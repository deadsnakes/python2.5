Subject: gettext-use-ubuntu-langpacks

---
 Lib/gettext.py | 15 +++++++++++++++
 1 file changed, 15 insertions(+)

diff --git a/Lib/gettext.py b/Lib/gettext.py
index 90ebc51..b52e8c0 100644
--- a/Lib/gettext.py
+++ b/Lib/gettext.py
@@ -446,11 +446,26 @@ def find(domain, localedir=None, languages=None, all=0):
         if lang == 'C':
             break
         mofile = os.path.join(localedir, lang, 'LC_MESSAGES', '%s.mo' % domain)
+        mofile_lp = os.path.join("/usr/share/locale-langpack", lang,
+                               'LC_MESSAGES', '%s.mo' % domain)
+
+	# first look into the standard locale dir, then into the
+	# langpack locale dir
+
+	# standard mo file
         if os.path.exists(mofile):
             if all:
                 result.append(mofile)
             else:
                 return mofile
+
+	# langpack mofile -> use it
+        if os.path.exists(mofile_lp):
+            if all:
+                result.append(mofile_lp)
+            else:
+                return mofile_lp
+
     return result
 
 
