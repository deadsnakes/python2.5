Date: Fri, 27 Apr 2018 08:24:06 -0700
Subject: distutils-install-layout

# DP: distutils: Add an option --install-layout=deb, which is ignored for 2.5.
---
 Lib/distutils/command/install.py | 6 ++++++
 1 file changed, 6 insertions(+)

diff --git a/Lib/distutils/command/install.py b/Lib/distutils/command/install.py
index 8e27002..5a4f234 100644
--- a/Lib/distutils/command/install.py
+++ b/Lib/distutils/command/install.py
@@ -135,6 +135,9 @@ class install (Command):
 
         ('record=', None,
          "filename in which to record list of installed files"),
+
+        ('install-layout=', None,
+         "installation layout to choose (known values: deb)"),
         ]
 
     boolean_options = ['compile', 'force', 'skip-build']
@@ -167,6 +170,9 @@ class install (Command):
         self.install_scripts = None
         self.install_data = None
 
+        # enable custom installation, known values: deb, IGNORED in 2.5
+        self.install_layout = None
+
         self.compile = None
         self.optimize = None
 
